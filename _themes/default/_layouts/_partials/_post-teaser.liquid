
<div class="media">
    
    {% if post.teaser_image != nil %}
        <img src="{{ post.teaser_image }}" class="rounded img-thumbnail mr-3" width="125" />
    {% endif %}

    <div class="media-body mb-5">

        <div class="row no-gutters align-items-end mb-2">

            <div class="col-auto mr-3">
                <h4 class="mt-0 mb-0"><a href="{{ post.url }}">{{ post.title }}</a></h4>
            </div>

            <div class="col-auto mr-auto">
                <div class="text-muted"><i class="bi-calendar pr-2"></i>{{ post.date }}</div>
            </div>

            <div class="col-auto mr-3">

                {% if post.author_page != nil %}
                    <div class="text-muted">Written by <a href="{{ post.author_page }}">{{ post.author }}</a></div>
                {% else %}
                    <div class="text-muted">Written by {{ post.author }}</div>
                {% endif %}

            </div>

        </div>

        <!-- calculated post excerpt here -->
        {{ post.excerpt }}

        <div>
            <i class="text-muted bi-tags-fill pr-2"></i>
            {% for tag in post.tags %}
                <a href="{{ tag.url }}" class="border-right pr-2 mr-2">{{ tag.name }}</a>
            {% endfor %}
        </div>

    </div>
</div>

