<section class="mb-5 p-4 shadow rounded bg-white">

    <div class="row mb-3">

        <div class="col-auto mr-auto">
            <h3><a href="{{ post.url }}">{{ post.title }}</a></h3>
        </div>

        <div class="col-auto">
            <div class="row no-gutters align-items-center">
                <div class="col-auto pr-3">
                    <a href="{{ post.author_page }}">
                        <img src="{{ post.author_image }}" alt="Picture of {{ post.author }} and link to author page" class="d-block rounded-circle" style="width:70px" alt="{{ page.author }}" />
                    </a>
                </div>
                <div class="col-auto pr-3">
                    <div class="text-muted"><a href="{{ post.author_page }}">{{ post.author }}</a></div>
                    <div class="text-muted"><i class="bi-calendar pr-2"></i>{{ post.date }}</div>
                </div>
            </div>
        </div>

    </div>

    {{ post.excerpt }}

    <div>
        {% for tag in post.tags %}
            <a href="{{ tag.url }}" class="border-right pr-2 mr-2">{{ tag.name }}</a>
        {% endfor %}
    </div>

</section>