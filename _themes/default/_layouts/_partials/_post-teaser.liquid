<section class="mb-5 p-4 shadow rounded bg-white">

    <div class="row mb-3 no-gutters align-items-center">

        <div class="col-auto mr-auto">
            <h3><a href="{{ post.url }}">{{ post.title }}</a></h3>
        </div>

        <div class="col-md-auto mr-3">
            <div class="text-muted"><a href="{{ post.author_page }}">{{ post.author }}</a></div>
        </div>

        <div class="col-md-auto">
            <div class="text-muted"><i class="bi-calendar pr-2"></i>{{ post.date }}</div>
        </div>

    </div>

    <div class="row">
        <div class="col-auto">
            {% if post.image != nil %}
                <img src="{{ post.image }}" class="d-block rounded img-thumbnail float-left mb-1 mr-3" width="125" />
            {% endif %}
            {{ post.excerpt }}
        </div>
    </div>

    <div class="row">
        <div class="col-auto">
            {% for tag in post.tags %}
                <a href="{{ tag.url }}" class="border-right pr-2 mr-2">{{ tag.name }}</a>
            {% endfor %}
        </div>
    </div>

</section>