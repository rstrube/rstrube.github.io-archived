<!-- Sidebar -->
<div class="row">
    <div class="col-auto bg-light border-right pt-3 pb-3" id="sidebar">

        <!-- Fixed position toggler button -->
        <button class="btn btn-dark" id="sidebar-collapsed-toggler" type="button">
            <i class="bi-box-arrow-right"></i>
        </button>

        <div class="row pb-3">
            <div class="col">
                <button class="d-flex btn btn-dark ml-auto mr-auto" id="sidebar-expanded-toggler" type="button">
                    <span><i class="bi-box-arrow-left pr-2"></i>Close Navigation</span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col pl-4 pr-4">
                <nav>
                    <ul class="nav flex-column">
                        
                        <!-- This loops through the site navigation -->
                        {% for nav in site.nav %}
                            {% include '_partials/_sidebar/_sidebar-item' %}
                        {% endfor %}

                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>