<!doctype html>
<html lang="en">

  {% include '_head' %}

  <body class="bg-light">

    {% include '_nav' %}
    
    <div class="container pt-5 pb-5">

      <section class="mb-5">
        <h1>{{ page.title }}</h1>
        <!-- Content here -->
        {{ page.content }}
      </section>

      <!-- This loops through the paginated posts -->
      {% for post in paginator.posts %}
        <section class="mb-5 p-3 shadow rounded bg-white">
          <div class="row">
            <div class="col-auto mr-auto">
              <h3><a href="{{ post.url }}">{{ post.title }}</a></h3>
            </div>
            <div class="col-auto" style="line-height:25px">
              <div class="text-muted">{{ post.author }}</div>
              <div class="text-muted"><i class="bi-calendar align-text-bottom pr-2"></i><span class="align-text-top">{{ post.date }}</span></div>
            </div>
          </div>
          {{ post.excerpt }}
          <div>
            {% for tag in post.tags %}
              <a href="{{ tag.url }}" class="border-right pr-2 mr-2">{{ tag.name }}</a>
            {% endfor %}
          </div>
        </section>
      {% endfor %}

      <nav aria-label="Blog navigation">
        <ul class="pagination justify-content-center">
          {% if paginator.previous_page %}
            <li class="page-item">
              <a class="page-link" href="{{ paginator.previous_page_path }}">Previous</a>
            </li>
          {% else %}
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
          {% endif %}
          {% if paginator.next_page %}
            <li class="page-item">
              <a class="page-link" href="{{ paginator.next_page_path }}">Next</a>
            </li>
          {% else %}
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">Next</a>
            </li>
          {% endif %}
        </ul>
      </nav>

    </div>

    {% include '_footer' %}

  </body>
</html>