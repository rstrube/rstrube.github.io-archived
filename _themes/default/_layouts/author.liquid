<!doctype html>
<html lang="en">

  {% include '_partials/_head' %}

  <body class="bg-white">

      {% include '_partials/_nav_header' %}
      {% include '_partials/_sidebar' %}

      <div class="container py-4 py-md-5">
        <main class="gaius-main {% if site.sidebar.size > 0 %}has-sidebar{% endif %}" role="main">

          <!-- author name row -->
          <div class="row no-gutters align-items-center mb-2">

              {% if page.author_image != nil %}
                <div class="col-auto mr-2">
                  <img src="{{ page.author_image }}" alt="Picture of {{ page.author }}" class="d-block rounded-circle" width="100" />
                </div>
              {% endif %}

              <div class="col-auto">
                <h3 class="mb-0">{{ page.title }}</h3>
              </div>
          </div>

          <!-- Content here -->
          {{ page.content }}

        </main>
      </div>

      {% include '_partials/_footer' %}
      
  </body>
</html>