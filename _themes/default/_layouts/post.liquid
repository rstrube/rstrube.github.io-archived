<!doctype html>
<html lang="en">

  {% include '_partials/_head' %}

  <body class="bg-light">

    {% include '_partials/_nav' %}
    
    <div class="container pt-5 pb-5">

      <div class="row mb-3 align-items-center">

        <div class="col-auto mr-auto">
          <h1>{{ page.title }}</h1>
        </div>

        <div class="col-auto">
          <div class="row no-gutters align-items-center">

            {% if page.author_image != nil %}
              <div class="col-auto mr-3">

                {% if page.author_page != nil %}
                  <a href="{{ page.author_page }}">
                    <img src="{{ page.author_image }}" alt="Picture of {{ page.author }} and link to author page" class="d-block rounded-circle" width="65" />
                  </a>
                {% else %}
                  <img src="{{ page.author_image }}" alt="Picture of {{ page.author }}" class="d-block rounded-circle" width="65" />
                {% endif %}

              </div>
            {% endif %}

            <div class="col-auto mr-3">

              {% if page.author_page != nil %}
                <div class="text-muted"><a href="{{ page.author_page }}">{{ page.author }}</a></div>
              {% else %}
                <div class="text-muted">{{ page.author }}</div>
              {% endif %}
              
              <div class="text-muted"><i class="bi-calendar pr-2"></i>{{ page.date }}</div>
            </div>

          </div>
        </div>

      </div>

      {% if page.image != nil %}
        <img src="{{ page.image }}" class="d-block rounded img-thumbnail float-left mb-1 mr-3" width="200" />
      {% endif %}

      <!-- Content here -->
      {{ page.content }}

    </div>
    
    {% include '_partials/_footer' %}

  </body>
</html>