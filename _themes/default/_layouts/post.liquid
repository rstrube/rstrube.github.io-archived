<!doctype html>
<html lang="en">

  {% include '_head' %}

  <body class="bg-light">

    {% include '_nav' %}
    
    <div class="container pt-5 pb-5">

      <div class="row mb-4">

        <div class="col-auto mr-auto">
          <h1>{{ page.title }}</h1>
        </div>

        <div class="col-auto">
          <div class="row no-gutters align-items-center">

            <div class="col-auto pr-3">
              <img src="{{ page.author_image }}" class="d-block rounded-circle" style="width:70px" />
            </div>

            <div class="col-auto pr-3">
              <div class="text-muted">{{ page.author }}</div>
              <div class="text-muted"><i class="bi-calendar pr-2"></i>{{ page.date }}</div>
            </div>

          </div>
        </div>

      </div>

      <!-- Content here -->
      {{ page.content }}

    </div>
    
    {% include '_footer' %}

  </body>
</html>