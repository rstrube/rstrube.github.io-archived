<!doctype html>
<html lang="en">

  {% include '_partials/_head' %}

  <body class="bg-light">

    {% include '_partials/_nav' %}
    
    <div class="container pt-5 pb-5">

      <div class="row mb-3 align-items-center">

        <div class="col-auto mr-auto">
          <h1>{{ page.title }}</h1>
        </div>

        <div class="col-auto">
          <div class="row no-gutters align-items-center">

            <div class="col-auto mr-3">
              <a href="{{ page.author_page }}">
                <img src="{{ page.author_image }}" alt="Picture of {{ page.author }} and link to author page" class="d-block rounded-circle" width="65" />
              </a>
            </div>

            <div class="col-auto mr-3">
              <div class="text-muted"><a href="{{ page.author_page }}">{{ page.author }}</a></div>
              <div class="text-muted"><i class="bi-calendar pr-2"></i>{{ page.date }}</div>
            </div>

          </div>
        </div>

      </div>

      {% if page.image %}
        <img src="{{ page.image }}" class="d-block rounded img-thumbnail float-left mb-1 mr-3" width="200" />
      {% endif %}

      <!-- Content here -->
      {{ page.content }}

    </div>
    
    {% include '_partials/_footer' %}

  </body>
</html>